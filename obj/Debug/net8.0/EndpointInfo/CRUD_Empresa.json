  "components": {
    "schemas": {
      "EmpresaDto": {
        "required": [
          "cep",
          "cidade",
          "cnpj",
          "email",
          "nomeFantasia",
          "nomeRazao",
          "telefone",
          "uf"
        ],
        "type": "object",
        "properties": {
          "nomeRazao": {
            "maxLength": 200,
            "minLength": 3,
            "type": "string"
          },
          "nomeFantasia": {
            "maxLength": 200,
            "minLength": 3,
            "type": "string"
          },
          "cnpj": {
            "minLength": 1,
            "pattern": "^(\\d{14}|\\d{2}\\.\\d{3}\\.\\d{3}\\/\\d{4}-\\d{2})$",
            "type": "string"
          },
          "inscEstadual": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "telefone": {
            "minLength": 1,
            "pattern": "^\\(?\\d{2}\\)?[\\s-]?\\d{4,5}-?\\d{4}$",
            "type": "string"
          },
          "email": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string",
            "format": "email"
          },
          "cidade": {
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "uf": {
            "maxLength": 2,
            "minLength": 2,
            "type": "string"
          },
          "cep": {
            "minLength": 1,
            "pattern": "^\\d{5}-?\\d{3}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
